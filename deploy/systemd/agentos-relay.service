[Unit]
Description=AgentOS Relay Server
Documentation=https://github.com/agentos-project/agentos
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=agentos
Group=agentos

# Environment configuration
EnvironmentFile=-/etc/agentos/relay.env

# Working directory
WorkingDirectory=/opt/agentos/relay

# Main executable (runs both WebSocket and REST API)
ExecStart=/usr/bin/python3 /opt/agentos/relay/relay_server.py --host 0.0.0.0 --port 8765

# Restart configuration
Restart=always
RestartSec=10
WatchdogSec=60

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=agentos-relay

# Resource limits
MemoryMax=1G
CPUQuota=200%
TasksMax=1000

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
PrivateDevices=yes
ProtectKernelTunables=yes
ProtectKernelModules=yes
ProtectControlGroups=yes
RestrictAddressFamilies=AF_UNIX AF_INET AF_INET6
RestrictNamespaces=yes
RestrictRealtime=yes

# Allow write access to data directories
ReadWritePaths=/var/lib/agentos

[Install]
WantedBy=multi-user.target
